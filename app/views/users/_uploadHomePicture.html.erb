<%= form_with(model: profile, url: @profile.user_id == nil ? profile_update_path(@profile) : patch_profile_path(@profile), local: true) do |form| %>

  <div class="field">
    <%= form.label :home_picture, 'Choose file to upload' %><br>
    <%= form.file_field :home_picture %>
  </div>

  <div class="actions">
    <%= form.submit "Update Home Picture", class: 'lapor-form-button' %>
  </div>
<% end %>


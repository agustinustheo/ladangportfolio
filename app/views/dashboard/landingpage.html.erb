<script>
$(document).ready(function(){
    var bindEvent = true;
    reachedHowTo();
    function reachedTop(){
        $(document).bind('scroll', function() {
            if($(this).scrollTop()<$('#howTo').position().top && bindEvent === false){
                reachedHowTo();
                bindEvent = true;
                $('.lapor-landing-page-navbar').css("transform", "translateY(-42px)");
            }
        });
    }
    function reachedHowTo(){
        $(document).bind('scroll', function() {
            if($(this).scrollTop()>=$('#howTo').position().top && bindEvent === true){
                $(document).unbind();
                bindEvent = false;
                $('.lapor-landing-page-navbar').css("transform", "translateY(0px)");
                reachedTop();
            }
        });
    }
});
</script>